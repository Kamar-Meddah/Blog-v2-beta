<% include templates/header.ejs %>

    <h1><b><em><%=article.titre%></em></b></h1>
    <br>
    <div class="row">
        <div class="col-sm-8 col-8">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><i class="fa fa-home" aria-hidden="true"></i><em> Home</em></a></li>
                <li class="breadcrumb-item"><a href="/category=<%=article.categorie%>=<%=article.category_id%>/1"><i class="fa fa-folder-open-o" aria-hidden="true"></i> <em><%=post.categorie%></em></a></li>
                <li class="breadcrumb-item active"><i class="fa fa-file-text-o" aria-hidden="true"></i> <em><%=article.titre%></em></li>
            </ol>

            <br>
            <div><%- article.contenu %></div> <br>
            <div class="row">
                <% for(image of images) { %>
                <div class="col-sm-4 col-12">
                    <a href="/img/articles/<%=image.name%>" data-lightbox="roadtrip">
                        <p><img src="/img/articles/<%=image.name%>" class="img-fluid img-thumbnail" alt="Images" width="300px"></p>
                    </a>
                </div>
                <% } %>
            </div>

        </div>

        <div class="col-sm-4 col-4">
            
                <br><br><br>
                <h2><i class="fa fa-folder-open-o" aria-hidden="true"></i><em> Categories</em></h2>
                <% for(cat of categories) { %>
                <li class="list-unstyled"><a href="/category=<%=cat.titre%>=<%=cat.id%>/1"><%=cat.titre%></a></li>
            <% } %>
          
        </div>
    </div>



<br>
    <div class="row">
        <div class="col-sm-6 col-6">
            <form method="post" action="commenting">
                <h3><i class="fa fa-commenting" aria-hidden="true"></i> <em>Poster Vos Commentaires</em></h3>

                <label for="name">Name : </label> <input type="text" id="name" class="form-control control" name="name" placeholder="Enter Ur Name" required>
                <br>
                <label for="comment">Votre Commentaire : </label><textarea id=" comment " class="form-control control" name="comment" required></textarea>
                <br>
                <div class="text-right ">
                    <button type="submit " class="btn btn-outline-primary"><i class="fa fa-commenting-o" aria-hidden="true"></i><em> Commenter</em></button>
                </div>
            </form>
        </div>
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-sm-6 col-6">
                <h3><i class="fa fa-comments" aria-hidden="true"></i> <em>Commentaires</em> :</h3><br>

              <% for(comment of comments) { %>
                <div class="row ">
                        <div class="col-sm-8 col-8"><h6><b><%=comment.name%> : </b></h6></div>
                        <div class="text-right"><em ><%=ago(comment.date)%></em></div>
                    </div>
                    <div class="row ">
                        <div class="col-sm-1 col-1"></div>
                        <div class="col-sm-10 col-10 ">
                            <p> <%=comment.content%> </p>
                           
                        </div>
                        <i ng-show="dat " ng-click="delete(comment.id,$index) " class="fa fa-times t " aria-hidden="true "></i>
                        
                    </div>
                    <hr>
                    <% }%>
            </div>
        </div>
 



<% include templates/footer.ejs %>